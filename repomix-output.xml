            {/* Instructions */}
            <div className="bg-blue-50 border border-blue-200 rounded-lg p-4">
                <h3 className="font-semibold text-blue-900 mb-2">Facebook Post URLs</h3>
                <p className="text-sm text-blue-800">
                    To add a testimonial, paste the URL of a Facebook post from your page.
                    <br />
                    <strong>How to get the URL:</strong> Click the post â†’ Click "..." â†’ Click "Get link"
                </p>
            </div>

            {/* Testimonials Grid */}
            {testimonials.length === 0 ? (
                <div className="text-center py-12 bg-gray-50 rounded-lg border border-gray-200">
