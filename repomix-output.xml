import { createClient } from '@supabase/supabase-js'

const supabaseUrl = import.meta.env.VITE_SUPABASE_URL
const supabaseAnonKey = import.meta.env.VITE_SUPABASE_ANON_KEY

if (!supabaseUrl || !supabaseAnonKey) {
  throw new Error('Missing Supabase environment variables')
}

export const supabase = createClient(supabaseUrl, supabaseAnonKey)

/**
 * Helper: Get all submissions with optional filter
 */
export async function getSubmissions(
  serviceType?: string,
  status?: string
) {
  let query = supabase.from('submissions').select('*')

  if (serviceType) {
    query = query.eq('service_type', serviceType)
  }

  if (status) {
    query = query.eq('status', status)
  }

  const { data, error } = await query.order('created_at', { ascending: false })

  if (error) {
    console.error('Error fetching submissions:', error)
    throw error
  }

  return data || []
}

/**
 * Helper: Get submission count by status and service
 */
export async function getSubmissionStats() {
  const { data, error } = await supabase
    .from('submissions')
    .select('service_type, status')

  if (error) {
    console.error('Error fetching stats:', error)
    throw error
  }

  const stats = {
    total: data?.length || 0,
    new: data?.filter((s) => s.status === 'new').length || 0,
    inProgress: data?.filter((s) => s.status === 'in-progress').length || 0,
    completed: data?.filter((s) => s.status === 'completed').length || 0,
    byService: {} as Record<string, number>,
  }

  data?.forEach((submission) => {
    stats.byService[submission.service_type] =
      (stats.byService[submission.service_type] || 0) + 1
  })

  return stats
}

/**
 * Helper: Subscribe to real-time changes on submissions table
 */
export function subscribeToSubmissions(
  callback: (payload: any) => void,
  serviceType?: string
) {
  const channel = supabase
    .channel('submissions-changes')
    .on(
      'postgres_changes',
      {
        event: '*',
        schema: 'public',
        table: 'submissions',
        filter: serviceType ? `service_type=eq.${serviceType}` : undefined,
      },
      callback
    )
    .subscribe()

  return channel
}

/**
 * Helper: Update submission status and notes
 */
export async function updateSubmissionStatus(
  submissionId: string,
  status: string,
  notes?: string
) {
  const { data, error } = await supabase
    .from('submissions')
    .update({ status, notes, updated_at: new Date().toISOString() })
    .eq('id', submissionId)
    .select()

  if (error) {
    console.error('Error updating submission:', error)
    throw error
  }

  return data?.[0] || null
}

/**
 * Helper: Delete submission
 */
export async function deleteSubmission(submissionId: string) {
  const { error } = await supabase
    .from('submissions')
    .delete()
    .eq('id', submissionId)

  if (error) {
    console.error('Error deleting submission:', error)
    throw error
  }

  return true
}

/**
 * Helper: Export submissions to CSV format
 */
export async function exportSubmissionsToCSV(
  serviceType?: string,
  status?: string
) {
  const submissions = await getSubmissions(serviceType, status)

  if (!submissions.length) return ''

  // CSV headers
  const headers = [
    'ID',
    'Service Type',
    'Name',
    'Email',
    'Phone',
    'Message',
    'Status',
    'Notes',
    'Created At',
  ]

  // CSV rows
  const rows = submissions.map((s) => [
    s.id,
    s.service_type,
    `"${s.name}"`,
    s.email,
    s.phone || '',
    `"${s.message.replace(/"/g, '""')}"`,
    s.status,
    `"${(s.notes || '').replace(/"/g, '""')}"`,
    new Date(s.created_at).toLocaleString(),
  ])

  return [headers, ...rows].map((row) => row.join(',')).join('\n')
}
