export function formatDate(date: Date | { seconds: number; nanoseconds: number }): string {
  if (!date) return 'N/A';

  let dateObj: Date;

  if (date instanceof Date) {
    dateObj = date;
  } else if (typeof date === 'object' && 'seconds' in date) {
    dateObj = new Date(date.seconds * 1000);
  } else {
    return 'Invalid Date';
  }

  return new Intl.DateTimeFormat('en-ZA', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit',
  }).format(dateObj);
}

export function getCollectionTitle(collectionName: string): string {
  const titles: Record<string, string> = {
    'class-ecs-ecns-licensing': 'Class ECS/ECNS Licensing',
    'icasa-type-approvals': 'ICASA Type Approvals',
    'license-exemptions': 'License Exemptions',
    'nrcs-loa-applications': 'NRCS LOA Applications',
    'radio-dealer-licensing': 'Radio Dealer Licensing',
    'ski-boat-vhf-licensing': 'Ski Boat VHF Licensing',
    'contacts': 'Contact Form Submissions',
  };

  return titles[collectionName] || collectionName;
}

export function getStatusColor(status?: string): string {
  const colors: Record<string, string> = {
    new: 'bg-blue-100 text-blue-800',
    'in-progress': 'bg-yellow-100 text-yellow-800',
    completed: 'bg-green-100 text-green-800',
    archived: 'bg-gray-100 text-gray-800',
  };

  return colors[status || 'new'] || colors.new;
}

export function getStatusLabel(status?: string): string {
  const labels: Record<string, string> = {
    new: 'New',
    'in-progress': 'In Progress',
    completed: 'Completed',
    archived: 'Archived',
  };

  return labels[status || 'new'] || 'New';
}
