rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    function isAdmin() {
      return isSignedIn() && getUserData(request.auth.uid).role == 'admin';
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    match /services/{serviceId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /blog_posts/{blogPostId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /testimonials/{testimonialId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /form_submissions/{submissionId} {
      allow create: if true; // anyone can submit a form
      allow read, list, update, delete: if isAdmin();
    }
  }
}
