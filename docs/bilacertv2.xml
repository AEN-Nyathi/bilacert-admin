        ) : (
          services.map((service) => (
            <div
              key={service.id}
              className="bg-white rounded-lg shadow hover:shadow-lg transition p-6"
            >
              <div className="flex justify-between items-start mb-4">
                <h3 className="text-lg font-semibold text-primary flex-1">{service.title}</h3>
                <div className="flex gap-2">
                  <button
                    onClick={() => handleOpenModal(service)}
                    className="text-accent hover:text-accent-dark"
                  >
                    <Edit2 className="h-5 w-5" />
                  </button>
                  <button
                    onClick={() => handleDelete(service.id)}
                    className="text-red-600 hover:text-red-700"
                  >
                    <Trash2 className="h-5 w-5" />
                  </button>
                </div>
              </div>

              <p className="text-sm text-text-gray mb-3">{service.shortDescription}</p>

              <div className="space-y-2 mb-4">
                <p className="text-xs text-text-light">
                  <strong>Category:</strong> {service.category || 'N/A'}
                </p>
                <p className="text-xs text-text-light">
                  <strong>Processing Time:</strong> {service.processingTime || 'N/A'}
                </p>
                <p className="text-xs text-text-light">
                  <strong>Route:</strong> {service.href}
                </p>
              </div>

              {service.features && service.features.length > 0 && (
