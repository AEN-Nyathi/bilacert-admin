                const Icon = item.icon;
                const active = isActive(item.href);

                return (
                  <li key={item.id}>
                    <Link
                      href={item.href}
                      onClick={() => setIsMobileMenuOpen(false)}
                      className={`
                        w-full flex items-center px-4 py-3 rounded-lg text-left transition-colors duration-150
