import { useEffect, useState } from 'react'
import { supabase, subscribeToSubmissions } from '@/lib/supabase'

interface DashboardStats {
  totalSubmissions: number
  newSubmissions: number
  inProgressSubmissions: number
  completedSubmissions: number
  submissionsByType: Record<string, number>
  recentSubmissions: any[]
  loading: boolean
  error: string | null
}

export function useDashboardStats(): { stats: DashboardStats; loading: boolean } {
  const [stats, setStats] = useState<DashboardStats>({
    totalSubmissions: 0,
    newSubmissions: 0,
    inProgressSubmissions: 0,
    completedSubmissions: 0,
    submissionsByType: {},
    recentSubmissions: [],
    loading: true,
    error: null,
  })

  useEffect(() => {
    const loadStats = async () => {
      try {
        // Fetch all submissions from Supabase
        const { data, error } = await supabase
          .from('submissions')
          .select('*')
          .order('created_at', { ascending: false })

        if (error) throw error

        // Calculate stats
        const submissions = data || []
        const newCount = submissions.filter((s) => s.status === 'new').length
        const inProgressCount = submissions.filter((s) => s.status === 'in-progress').length
        const completedCount = submissions.filter((s) => s.status === 'completed').length

        // Group by service type
        const submissionsByType: Record<string, number> = {}
        submissions.forEach((s) => {
          submissionsByType[s.service_type] = (submissionsByType[s.service_type] || 0) + 1
        })

        // Get recent submissions
        const recentSubmissions = submissions.slice(0, 10)

        setStats({
          totalSubmissions: submissions.length,
          newSubmissions: newCount,
          inProgressSubmissions: inProgressCount,
          completedSubmissions: completedCount,
          submissionsByType,
          recentSubmissions,
          loading: false,
          error: null,
        })
      } catch (error) {
        setStats((prev) => ({
          ...prev,
          loading: false,
          error: error instanceof Error ? error.message : 'Failed to load stats',
        }))
      }
    }

    // Initial load
    loadStats()

    // Subscribe to real-time updates
    const channel = subscribeToSubmissions((payload) => {
      // Reload stats on any change
      loadStats()
    })

    return () => {
      supabase.removeChannel(channel)
    }
  }, [])

  return { stats, loading: stats.loading }
}
