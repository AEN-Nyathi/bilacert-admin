import { X, Mail, Phone, Building2, Calendar, MessageSquare, FileText } from 'lucide-react';
import { Submission } from '../types';
import { formatDate } from '../utils/formatters';

interface SubmissionDetailModalProps {
  submission: Submission;
  collectionName: string;
  onClose: () => void;
}

export default function SubmissionDetailModal({
  submission,
  collectionName,
  onClose,
}: SubmissionDetailModalProps) {
  const renderFieldValue = (label: string, value: any, icon?: React.ReactNode) => {
    if (!value || value === '') return null;

    return (
      <div className="border-b border-gray-100 pb-4">
        <div className="flex items-start gap-3">
          {icon && <div className="text-gray-400 mt-1">{icon}</div>}
          <div className="flex-1">
            <p className="text-sm font-medium text-gray-500 mb-1">{label}</p>
            <p className="text-base text-gray-900">{value}</p>
          </div>
        </div>
      </div>
    );
  };

  const renderSpecificFields = () => {
    const fields: React.ReactNode[] = [];

    if ('company' in submission) {
      fields.push(
        renderFieldValue('Company', submission.company, <Building2 className="h-5 w-5" />)
      );
    }

    if ('licenseType' in submission) {
      fields.push(renderFieldValue('License Type', submission.licenseType, <FileText className="h-5 w-5" />));
    }

    if ('productName' in submission) {
      fields.push(renderFieldValue('Product Name', submission.productName, <FileText className="h-5 w-5" />));
    }

    if ('productDescription' in submission) {
      fields.push(
        renderFieldValue('Product Description', submission.productDescription, <FileText className="h-5 w-5" />)
      );
    }

    if ('approvalType' in submission) {
      fields.push(renderFieldValue('Approval Type', submission.approvalType, <FileText className="h-5 w-5" />));
    }

    if ('deviceDescription' in submission) {
      fields.push(
        renderFieldValue('Device Description', submission.deviceDescription, <FileText className="h-5 w-5" />)
      );
    }

    if ('boatName' in submission) {
      fields.push(renderFieldValue('Boat Name', submission.boatName, <FileText className="h-5 w-5" />));
    }

    if ('boatRegistration' in submission) {
      fields.push(
        renderFieldValue('Boat Registration', submission.boatRegistration, <FileText className="h-5 w-5" />)
      );
    }

    if ('service' in submission) {
      fields.push(renderFieldValue('Service Interest', submission.service, <FileText className="h-5 w-5" />));
    }

    if ('message' in submission) {
      fields.push(
        renderFieldValue('Message', submission.message, <MessageSquare className="h-5 w-5" />)
      );
    }

    return fields;
  };

  return (
    <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
      <div className="bg-white rounded-xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-hidden">
        <div className="bg-blue-600 text-white px-6 py-4 flex items-center justify-between">
          <div>
            <h2 className="text-xl font-bold">Submission Details</h2>
            <p className="text-blue-100 text-sm mt-1">{submission.name}</p>
          </div>
          <button
            onClick={onClose}
            className="p-2 hover:bg-blue-700 rounded-lg transition-colors"
          >
            <X className="h-6 w-6" />
          </button>
        </div>

        <div className="p-6 overflow-y-auto max-h-[calc(90vh-120px)] space-y-4">
          {renderFieldValue('Full Name', submission.name)}
          {renderFieldValue('Email Address', submission.email, <Mail className="h-5 w-5" />)}
          {renderFieldValue('Phone Number', submission.phone, <Phone className="h-5 w-5" />)}
          {renderFieldValue(
            'Submission Date',
            formatDate(submission.timestamp),
            <Calendar className="h-5 w-5" />
          )}
          {renderSpecificFields()}
        </div>

        <div className="bg-gray-50 px-6 py-4 flex items-center justify-between border-t border-gray-200">
          <div className="text-sm text-gray-600">
            ID: <span className="font-mono text-xs">{submission.id}</span>
          </div>
          <div className="flex gap-3">
            <a
              href={`mailto:${submission.email}`}
              className="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium"
            >
              Send Email
            </a>
            <button
              onClick={onClose}
              className="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition-colors text-sm font-medium"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
  );
}
